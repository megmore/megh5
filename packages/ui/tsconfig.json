{
  "extends": "../../tsconfig.json",
  "paths": {
    "@/*": [
      "./src/*"
    ]
  },
  "compilerOptions": {
    "baseUrl": "./",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "target": "es6",
    "module": "ESNext",
    "sourceMap": false,
    "moduleResolution": "node",
    "allowJs": false,
    "declaration": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "rootDir": "./src",
    "declarationDir":  "./types",
    "noLib": false,
    "lib": ["dom", "es6", "es2017"]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ]
}
